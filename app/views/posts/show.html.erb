<div class="row">
  <p id="notice"><%= notice %></p>
  <h3><%= @post.title %></h3>
  <pre><code><%= @post.content %></code></pre>
  <div class="pull-right">
    <div class="btn-group">
      <%= link_to edit_post_path(@post), :class => "btn btn-small"  do %>
        <i class="icon-edit"></i>
      <% end %>
      <%= link_to post_path(@post, :format => :text),
        :class => "btn btn-small"  do %>
        <i class="icon-download"></i>
      <% end %>
      <%= link_to posts_path, :class => "btn btn-small" do %>
        <i class="icon-align-justify"></i>
      <% end %>
    </div>
  </div>
  <input id="post_url" class="input-xlarge" type="text"
    value="<%= p_url(@post) %>" disabled="disabled"></input>
</div>
