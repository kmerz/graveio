<div class="pull-right">
  <div class="btn-group">
    <%= link_to @post, :class => "btn btn-small" do %>
      <i class="icon-eye-open"></i>
    <% end %>
    <%= link_to edit_post_path(@post), :class => "btn btn-small" do %>
      <i class="icon-edit"></i>
    <% end %>
    <% if @post.parent.present? %>
      <%= link_to diff_post_path(@post), :class => "btn btn-small" do %>
        <i class="icon-plus"></i>
        <i class="icon-minus"></i>
      <% end %>
    <% end %>
    <%= link_to post_path(@post, :format => :text),
      :class => "btn btn-small"  do %>
      <i class="icon-download"></i>
    <% end %>
    <%= link_to posts_path, :class => "btn btn-small" do %>
      <i class="icon-align-justify"></i>
    <% end %>
    <%= link_to like_post_path(@post), :class => "btn btn-small like",
        :remote => true, "data-type" => :json, :id => "like_trigger" do %>
      <div id="likesize">
        <i class="icon-thumbs-up"></i>
        <%= @post.likedislikes.find_all_by_liked(true).size %>
      </div>
    <% end %>
    <%= link_to dislike_post_path(@post), :class => "btn btn-small like",
        :remote => true, "data-type" => :json, :id => "like_trigger" do %>
      <div id="dislikesize">
        <i class="icon-thumbs-down"></i>
        <%= @post.likedislikes.find_all_by_liked(false).size %>
      </div>
    <% end %>

  </div>
</div>

