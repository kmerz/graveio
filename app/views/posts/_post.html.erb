<% @post = post %>
<div class="preview_area">
<% if @post.title.present? %>
  <legend><%= link_to @post.title, post_path(@post) %></legend>
<% else %>
  <span>&nbsp;</span>
<% end %>

<%= preview_content(@post).html_safe %>

<% if @post.author.present? %>
  <small class="author">- <%= @post.author %></small>
<% else %>
  <small class="author">- Anonymous</small>
<% end %>
<small class="content_type"> (<%= @post.content_type %>)</small>

<%= render 'options' %>

<% if @post.tags.present? %>
  <% @post.tags.each do |tag| %>
    <%= link_to tag.name, {
      :controller => :posts,
      :action => :search,
      :tag_id => tag.id
    }, :class => "tags pull-right" %>
  <% end %>
<% end %>

<br />
<br />
</div>
