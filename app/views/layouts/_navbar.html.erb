<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
        <ul class="nav">
          <li><a class="brand" href="<%= root_url%>">grave.io</a></li>
          <li class="inactive"><a>where your code stays alive</a></li>
        </ul>
        <ul class="nav pull-right">
          <li>
            <%= link_to new_post_path do %>
              <i class="icon-plus-sign icon-white"></i>
            <% end %>
          </li>
          <li>
            <%= link_to help_path do %>
              <i class="icon-question-sign icon-white"></i>
            <% end %>
          </li>
          <li>
            <% if user_signed_in? %>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <i class="icon-off"></i> <%= current_user.email %>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path do %>
                <i class="icon-user"></i>
              <% end %>
            <% end %>
          </li>
        </ul>

        <%= form_tag("/search", :method => "get",
          :class =>"navbar-search pull-right") do %>
          <div class="input-append">
            <%= text_field_tag :query, nil, :class => "span2 search-query",
              :placeholder => "search" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
